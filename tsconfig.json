{
  "extends": "@tsconfig/node18/tsconfig.json",
  "compilerOptions": {
    "outDir": "dist",
    "baseUrl": "src",
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": [
    "src",
    "src/**/*",
    "**/*.spec.ts",
    "**/*.test.ts"
    ],
  "exclude": ["node_modules"]
}
